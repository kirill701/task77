import requests
import matplotlib.pyplot as plt

r=requests.get('https://raw.githubusercontent.com/dm-fedorov/python_basic/master/data/opendata.stat')
with open('Data.txt', 'w') as f:
    f.write(r.text)
f=open('Data.txt', 'r')

pens = []
data = []
months = []
for line in f:
    if line[-1] == '\n':
        line = line[:-1]
    l = line.split(',')
    if l[0] == 'Средняя пенсия' and l[1] == 'Забайкальский край' and '2018' in l[2]:
        data.append(l[2])
        pens.append(int(l[3]))

for i in range(len(data)):
    month = data[i].split('-')[1]
    months.append(int(month))

all1 = sum(pens)
col = len(pens)
print(f"Средняя пенсия в 2018 году в Забайкалье равна: {all1/col} рублей.")

coldata = len(months)
x = []
y = []
for i in range(coldata):
    x.append(months[i])
    y.append(pens[i])

plt.plot(x, y)
plt.title('Изменение средней пенсии в 2018 году в Забайкальском крае.')
plt.xlabel('Месяц.')
plt.ylabel('Сумма пенсии.')
plt.grid(True)
plt.show()
