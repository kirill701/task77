import requests

class MyFile:
    def init (self, name_file, mode):
        self.file_name = name_file
        self.mode = mode
        self.file = None
        self.status = 0
        self.file_url = " "

        if mode == "read":
            self.file = open(name_file, 'r')
        elif mode == "write":
            self.file = open(name_file, 'w')
        elif mode == "append":
            self.file = open(name_file, 'a')
            self.file.write('\n')
        elif mode == "url":
            self.file_name = name_file
        else:
            print(f"Неподдерживаемый режим {mode}.")

    def read(self):
        lines = self.file.readlines()
        result = ''
        for line in lines:
            result+=line
        self.file.close()
        return result
        
    def write(self, text):    
        self.file.write(text)
        self.file.close()

    def read_url(self):
        try:
            response = requests.get(self.file_name, timeout=10)
            response.raise_for_status()
            self.status = 1
            return response.text
        except Exception as e:
            self.status = 0
            return "Ошибка: сайт не существует или нет интернет соединения."
        
    
    def count_urls(self):
        if self.status == 0:
            return "Невозможно получить доступ к сайту."
        else:
            response = requests.get(self.file_name)
            return response.text.count('https://')  
    
    def write_url(self, file_url):
        if self.status == 0:
            return "Невозможно получить доступ к сайту."
        else:
            response = requests.get(self.file_name)
            with open(file_url, 'w') as f:
                f.write(response.text)
    


file = MyFile("text.txt", "read")
text = file.read() # чтение в виде str
print(text)

file = MyFile("text.txt", "write")
text = file.write("Привет!") # запись строки в файл  

file = MyFile("text.txt", "append")
text = file.write("привет!") # добавление строки в конец файла

# указали URL
file = MyFile("Вставить ссылку", "url")
# и может читать содержимое страницы по указанному URL
text = file.read_url() # чтение в виде str
print(text)

# кол-во url адресов на странице, например, методом count
count = file.count_urls()
print(count)

# запись содержимого страницы по URL в указанный файл
file.write_url("text_url.txt")
