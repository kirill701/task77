class MyFile:
    def __init__(self, filename, mode):
        self.filename = filename
        self.mode = mode
        print(f"Файл: '{filename}' в режиме '{mode}'")
    
    def read(self):
        if self.mode != "read":
            print("Ошибка: файл открыт не в режиме чтения")
            return None
        
        try:
            with open(self.filename, 'r', encoding='utf-8') as file:
                return file.read()
        except FileNotFoundError:
            print(f"Файл '{self.filename}' не найден")
            return None
        except Exception as e:
            print(f"Ошибка при чтении файла: {e}")
            return None
    
    def write(self, text):
        if self.mode not in ["write", "append"]:
            print("Ошибка: файл открыт не в режиме записи")
            return None
        
        try:
            mode = 'w' if self.mode == 'write' else 'a'
            with open(self.filename, mode, encoding='utf-8') as file:
                written = file.write(text)
                print(f"Записано {written} символов")
                return written
        except PermissionError:
            print(f"Нет прав для записи в файл '{self.filename}'")
            return None
        except Exception as e:
            print(f"Ошибка при записи в файл: {e}")
            return None
    
    def read_url(self):
        if self.mode != "url":
            print("Ошибка: объект не является URL")
            return None
        
        try:
            import urllib.request
            with urllib.request.urlopen(self.filename) as response:
                content = response.read().decode('utf-8')
                print(f"Успешно загружено {len(content)} символов")
                return content
        except ImportError:
            print("Библиотека urllib не найдена")
            return None
        except Exception as e:
            print(f"Ошибка при чтении URL: {e}")
            return None
    
    def count_links(self):
        if self.mode != "url":
            print("Ошибка: объект не является URL")
            return None
        
        html_content = self.read_url()
        if html_content:
            link_count = html_content.count('<a ')
            print(f"Найдено ссылок: {link_count}")
            return link_count
        return None
    
    def save_url_to_file(self, output_file):
        if self.mode != "url":
            print("Ошибка: объект не является URL")
            return None
        
        text = self.read_url()
        if text is None:
            return None
        
        try:
            with open(output_file, 'w', encoding='utf-8') as file:
                written = file.write(text)
                print(f"Содержимое URL сохранено в '{output_file}' ({written} символов)")
                return written
        except Exception as e:
            print(f"Ошибка при сохранении URL в файл: {e}")
            return None
